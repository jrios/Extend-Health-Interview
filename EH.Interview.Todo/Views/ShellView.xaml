<Window x:Class="EH.Interview.Todo.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:vw="clr-namespace:EH.Interview.Todo.Views"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="1024"
        Title="Caliburn To Do">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />            
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <ContentControl x:Name="ToDoListViewModel" Grid.Row="0" />
        <Button x:Name="ShowAddItemDialog" HorizontalAlignment="Right"
                Margin="5" Height="35" Width="65" Grid.Row="1" 
                Content="Add Items" />
    </Grid>
    
</Window>
