<UserControl x:Class="EH.Interview.Todo.Views.ToDoListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Button x:Name="ReloadItems" Grid.Row="0" Grid.Column="0" Content="Reload List" />
        <ItemsControl Grid.Row="0" Grid.Column="1">
            <!-- this is where I will define the way that the to do items list will be presented-->
        </ItemsControl>
        
        <Button x:Name="RemoveItem" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"
                Width="90" Margin="5"
                Content="Remove Item" />
        
        
    </Grid>
</UserControl>
