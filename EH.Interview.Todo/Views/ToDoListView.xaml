<UserControl x:Class="EH.Interview.Todo.Views.ToDoListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Button x:Name="ReloadItems" Grid.Row="0" Grid.Column="0" 
                Height="25" Width="75"
                Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top"
                Content="Reload List" />
        <ListBox x:Name="ToDoItems" Grid.Row="0" Grid.Column="1" Margin="5">
            <!-- this is where I will define the way that the to do items list will be presented-->
        </ListBox>
        
        <Button x:Name="RemoveItem" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"
                Width="90" Margin="5" Background="Red" Foreground="White"
                Content="Remove Item">
        </Button>
        
    </Grid>
</UserControl>
